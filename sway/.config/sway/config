# Variables
set $mod Mod4

set $left h
set $down j
set $up k
set $right l

set $term foot
set $menu wmenu-run -p "Execute"

set $config_dir ~/.config/sway
set $scripts_dir $config_dir/scripts
set $runtime_dir $XDG_RUNTIME_DIR/sway

set $run_cwd $scripts_dir/run-cwd.sh
set $power_control $scripts_dir/power-control.sh
set $workspace_ctl $scripts_dir/workspace-ctl.sh
set $idle $scripts_dir/idle.sh
set $screen_lock $scripts_dir/screen-lock.sh
set $screenshot $scripts_dir/screenshot.sh
set $swaybar_script $scripts_dir/status-command.sh

# Global font settings
font pango:Inter 9
output * subpixel none

# Autostart
exec mkdir -p $runtime_dir
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec gnome-keyring-daemon --start
exec dunst
exec playerctld daemon

# Output configuration
output * bg ~/Pictures/wallpaper fill

# Idle configuration
exec swayidle -w before-sleep "sh $screen_lock 1"
exec $idle $screen_lock

# Input configuration
input * {
    xkb_layout "us,ru"
    xkb_options "grp:win_space_toggle"
}

input type:pointer {
    accel_profile "flat"
}

input type:touchpad {
    tap enabled
    drag_lock "disabled"
    natural_scroll enabled
    scroll_factor 0.4
}


# Key bindings
## Basics:

### Start a terminal
bindsym $mod+Return exec $term

bindsym $mod+Shift+Return exec $run_cwd $term

bindsym $mod+Escape exec $screen_lock

bindsym --to-code $mod+q kill
bindsym --to-code $mod+Shift+q exec sh -c 'kill -9 $(swaymsg -t get_tree | jq ".. | objects | select(.focused? == true).pid")'

bindsym $mod+Tab exec $menu

floating_modifier $mod normal

bindsym --to-code $mod+Shift+c reload

bindsym --to-code $mod+Delete exec $power_control

## Moving around:
bindsym --to-code $mod+$left focus left
bindsym --to-code $mod+$down focus down
bindsym --to-code $mod+$up focus up
bindsym --to-code $mod+$right focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym --to-code $mod+Shift+$left move left
bindsym --to-code $mod+Shift+$down move down
bindsym --to-code $mod+Shift+$up move up
bindsym --to-code $mod+Shift+$right move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym --to-code $mod+y exec \
    "swaymsg resize grow left 10 px or 10 ppt || swaymsg resize shrink right 10 px or 10 ppt"
bindsym --to-code $mod+u exec \
    "swaymsg resize grow down 10 px or 10 ppt || swaymsg resize shrink up 10 px or 10 ppt"
bindsym --to-code $mod+i exec \
    "swaymsg resize grow up 10 px or 10 ppt || swaymsg resize shrink down 10 px or 10 ppt"
bindsym --to-code $mod+o exec \
    "swaymsg resize grow right 10 px or 10 ppt || swaymsg resize shrink left 10 px or 10 ppt"

bindsym --to-code $mod+Shift+y exec \
    "swaymsg resize grow left 2 px or 2 ppt || swaymsg resize shrink right 2 px or 2 ppt"
bindsym --to-code $mod+Shift+u exec \
    "swaymsg resize grow down 2 px or 2 ppt || swaymsg resize shrink up 2 px or 2 ppt"
bindsym --to-code $mod+Shift+i exec \
    "swaymsg resize grow up 2 px or 2 ppt || swaymsg resize shrink down 2 px or 2 ppt"
bindsym --to-code $mod+Shift+o exec \
    "swaymsg resize grow right 2 px or 2 ppt || swaymsg resize shrink left 2 px or 2 ppt"

## Workspaces:
bindsym $mod+F1 exec $workspace_ctl set-layer 1
bindsym $mod+F2 exec $workspace_ctl set-layer 2
bindsym $mod+F3 exec $workspace_ctl set-layer 3
bindsym $mod+F4 exec $workspace_ctl set-layer 4
bindsym $mod+F5 exec $workspace_ctl set-layer 5
bindsym $mod+F6 exec $workspace_ctl set-layer 6
bindsym $mod+F7 exec $workspace_ctl set-layer 7
bindsym $mod+F8 exec $workspace_ctl set-layer 8
bindsym $mod+F9 exec $workspace_ctl set-layer 9
bindsym $mod+Grave exec $workspace_ctl set-layer 0

bindsym $mod+1 exec $workspace_ctl set 1
bindsym $mod+2 exec $workspace_ctl set 2
bindsym $mod+3 exec $workspace_ctl set 3
bindsym $mod+4 exec $workspace_ctl set 4
bindsym $mod+5 exec $workspace_ctl set 5
bindsym $mod+6 exec $workspace_ctl set 6
bindsym $mod+7 exec $workspace_ctl set 7
bindsym $mod+8 exec $workspace_ctl set 8
bindsym $mod+9 exec $workspace_ctl set 9
bindsym $mod+0 exec $workspace_ctl set 10

bindsym $mod+Shift+1 exec $workspace_ctl move 1
bindsym $mod+Shift+2 exec $workspace_ctl move 2
bindsym $mod+Shift+3 exec $workspace_ctl move 3
bindsym $mod+Shift+4 exec $workspace_ctl move 4
bindsym $mod+Shift+5 exec $workspace_ctl move 5
bindsym $mod+Shift+6 exec $workspace_ctl move 6
bindsym $mod+Shift+7 exec $workspace_ctl move 7
bindsym $mod+Shift+8 exec $workspace_ctl move 8
bindsym $mod+Shift+9 exec $workspace_ctl move 9
bindsym $mod+Shift+0 exec $workspace_ctl move 10

bindgesture swipe:right workspace prev
bindgesture swipe:left workspace next

## Layout:
bindsym --to-code $mod+g splith
bindsym --to-code $mod+v splitv
bindsym --to-code $mod+c split none

bindsym --to-code $mod+e layout toggle split
bindsym --to-code $mod+w layout tabbed
bindsym --to-code $mod+Shift+w layout stacking

bindsym --to-code $mod+m fullscreen

bindsym --to-code $mod+f floating toggle

bindsym --to-code $mod+s sticky toggle

bindsym Alt+Tab focus mode_toggle

bindsym --to-code $mod+a focus parent

## Scratchpad:
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

## Utilities:
bindsym --locked XF86AudioMute exec pactl set-sink-mute \@DEFAULT_SINK@ toggle
bindsym --locked XF86AudioLowerVolume exec pactl set-sink-volume \@DEFAULT_SINK@ -5%
bindsym --locked XF86AudioRaiseVolume exec pactl set-sink-volume \@DEFAULT_SINK@ +5%
bindsym --locked XF86AudioMicMute exec pactl set-source-mute \@DEFAULT_SOURCE@ toggle

bindsym --locked XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym --locked XF86MonBrightnessUp exec brightnessctl set 5%+

bindsym Shift+Print exec $screenshot
bindsym Print exec $screenshot crop-to-clipboard

bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

bindsym $mod+Prior output * dpms on
bindsym $mod+Next output * dpms off

## Style:
default_border pixel 2
hide_edge_borders smart

for_window [class=".*"] inhibit_idle fullscreen
for_window [app_id=".*"] inhibit_idle fullscreen

seat * hide_cursor 8000

include ~/.config/sway/theme/theme.conf

# Status Bar
bar {
    position top
    pango_markup enabled
    tray_padding 4

    status_command while true; do $swaybar_script; sleep 1; done

    colors {
        statusline         $foreground_1
        background         $background_1
        inactive_workspace $background_1 $background_1 $foreground_2
        active_workspace   $foreground_2 $foreground_2 $background_1
        focused_workspace  $foreground_1 $foreground_1 $background_1
        urgent_workspace   $accent $accent $foreground_1
    }
}

# class                 border        bground       text          indicator     child_border
client.focused          $foreground_3 $foreground_3 $background_1 $foreground_1 $foreground_3
client.focused_inactive $background_2 $background_2 $foreground_2 $background_2 $background_2
client.unfocused        $background_1 $background_1 $foreground_2 $accent       $background_2
client.urgent           $background_2 $background_2 $foreground_2 $accent       $background_2
client.placeholder      $foreground_2 $background_1 $background_1 $background_2 $foreground_2

include /etc/sway/config.d/*
include ~/.config/sway/config.d/*
